.container {
  background: #f1f0f5;
}

.header-box {
  width: 100%;
  height: 230rpx;
  background-color: #2d8cf0;
  display: flex;
  align-items: center;
  text-align: center;
  color: #ffffff;
}

.header-box-item {
  flex: 1;
}

.card-box {
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 25rpx 0;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #cccccc;
  background-color: #ffffff;
}

.card-box-item {
  flex: 1;
  display: flex;
}

.card-box-item .imgs {
  width: 100rpx;
  height: 90rpx;
}

.card-box-item .item-right {
  margin-left: 40rpx;
}

.card-box-item .item-right .title {
  color: black;
  font-size: 44rpx;
}

.card-box-item .item-right .count {
  color: #666666;
}

.catalog {
  background-color: #ffffff;
}